<%=semantic_form_for @user do |f|%>
  <%= f.input :name%>
  <%= f.input :department%>
  <%= f.input :alert_when_owner, :label => "Email Me When People Comment on My Projects"%>
  <%=f.action :submit, :button_html => { :value => "Save Changes", :class => "btn btn-primary" }%>
  <%=link_to "Cancel", user_path(@user), :class => "btn btn-link" %>
<%end%>
<hr />
<p>
  <%=link_to "Deactivate my account", deactivate_user_path(@user), :class => "btn btn-danger", :confirm => "This cannot be undone. Any association to your projects, comments, etc will be lost permanently.", :method => "POST"%>
</p>
<hr />