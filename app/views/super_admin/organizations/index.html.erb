<h2>Manage Organizations</h2>
<p><%=link_to "Back to Super Admin", super_admin_root_path%></p>
<div class="row">
  <div class="col-sm-8">
    <%=form_tag "search", :remote => true do%>
      <div class="form-group">
        <%=text_field :query, 'field', :placeholder => 'Search', :class => "form-control" %>
      </div>
    <%end%>
  </div>
</div>
<div id="organizations_container">
  <%=render :partial => "organizations"%>
</div>
<script type="text/javascript">
  $("#query_field").keyup(function(){
    updateOrganizations();
  });

  function updateOrganizations(){
    $.get('<%=search_super_admin_organizations_path(:format => :js)%>',
    {query: $("#query_field").val()}); 
  }
</script>