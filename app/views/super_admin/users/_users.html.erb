<table class="table table-striped table-hover table-condensed table-bordered">
  <thead>
    <th>User</th>
    <th>Organizations</th>
    <th>Email</th>
    <th>Department</th>
    <th>Projects</th>
    <th>Votes</th>
    <th>Verified</th>
    <th>Admin</th>
    <th>Actions</th>
  </thead>
  <tbody>
    <%@users.each do |u|%>
    <tr>
      <td><%=u.name%></td>
      <td><%=u.organization_users.count%></td>
      <td><%=u.email%></td>
      <td><%=u.department%></td>
      <td><%=u.projects.unscoped.count%></td>
      <td><%=u.project_ratings.count%></td>
      <td>
        <% if u.verified then %>
          <span class="fa fa-check text-success"></span>
        <% else %>
          <span class="fa fa-times text-danger"></span>
        <% end %>
        <span class="sr-only"><%=u.verified%></span>
      </td>
      <td><% if u.admin then %>
          <span class="fa fa-check text-success"></span>
        <% else %>
          <span class="fa fa-times text-danger"></span>
        <% end %>
        <span class="sr-only"><%=u.admin%></span>
      </td>
      <td>
        <div class="btn-group">
          <%=link_to "Edit", edit_super_admin_user_path(u), :class => "btn btn-sm btn-default"%>
          <%=link_to "Delete", "#", :class => "btn btn-sm btn-danger"%>
        </div>
      </td>
    </tr>
    <%end%>
  </tbody>
</table>
<%=will_paginate @users%>