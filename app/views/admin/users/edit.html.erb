<%=semantic_form_for @user, :url => admin_user_path(@user) do |f|%>
  <div class="form-group">
    <label>Name</label>
    <p class="form-control-static">
      <%=@user.name%>
    </p>
  </div>
  <div class="form-group">
    <label>UID</label>
    <p class="form-control-static">
      <%=@user.uid%>
    </p>
  </div>
  <%=f.input :department%>
  <%=f.input :admin%>
  <%=f.input :verified%>
  <%=f.action :submit, :button_html => { :value => 'Save Changes', :class => "btn btn-primary" }%>
  <%=link_to "Cancel", admin_users_path, :class => "btn btn-default"%>
<%end%>
<hr />
