<h2>Manage Users</h2>
<p><%=link_to "Back to Admin", admin_root_path%></p>
<table class="table table-striped table-hover table-condensed table-bordered">
  <thead>
    <th>User</th>
    <th>Email</th>
    <th>Projects</th>
    <th>Votes</th>
    <th>Actions</th>
  </thead>
  <tbody>
    <%@users.each do |u|%>
    <tr>
      <td><%=u.name%></td>
      <td></td>
      <td><%=u.projects.count%></td>
      <td><%=u.project_ratings.count%></td>
      <td>
        <div class="btn-group">
          <%=link_to "Edit", "#", :class => "btn btn-small"%>
          <%=link_to "Admin", "#", :class => "btn btn-small"%>
          <%=link_to "Delete", "#", :class => "btn btn-small"%>
        </div>
      </td>   
    </tr>             
    <%end%>
  </tbody>
</table>
<%=will_paginate @users%>