<h2>Events</h2>
<p><%=link_to "Create an event", new_admin_event_path, :class => "btn btn-success"%></p>
<%if @events.blank? then%>
  <p>You have not created any events yet.</p>
<%else%>
  <table class="table table-striped table-hover table-condensed table-bordered">
    <thead>
      <th>Name</th>
      <th>Live</th>
      <th>Description</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Ideas</th>
      <th>Registrants</th>
      <th>Created on</th>
      <th>Actions</th>
    </thead>
    <tbody>
      <%@events.each do |e|%>
      <tr>
        <td><%=link_to e.title, admin_event_path(e)%></td>
        <td>
          <% if e.live then %>
            <span class="fa fa-check text-success"></span>
          <% else %>
            <span class="fa fa-times text-danger"></span>
          <% end %>
          <span class="sr-only"><%=e.live%></span>
        </td>
        <td><%= truncate strip_tags(e.description), :length => 50 %></td>
        <td><%= l e.start_date, format: :short %></td>
        <td><%= l e.end_date, format: :short %></td>
        <td><%= link_to e.projects.count, admin_event_projects_path(e) %></td>
        <td><%= link_to "#{e.registrations.count}/#{e.registration_maximum}", admin_event_event_registrations_path(e) %></td>
        <td><%= l e.created_at, format: :short %></td>
        <td>
          <div class="btn-group">
            <%=link_to "Edit", edit_admin_event_path(e), :class => "btn btn-sm btn-default"%>
            <%=link_to "Delete", admin_event_path(e), :class => "btn btn-sm btn-danger",
                        :confirm => "Are you certain you want to do this?", :method => :delete%>
          </div>
        </td>
      </tr>
      <%end%>
    </tbody>
  </table>
<%end%>
