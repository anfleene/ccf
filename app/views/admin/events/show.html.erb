<h2>Event <%=@event.title%></h2>
<p><%=link_to "Back to Admin", admin_root_path%></p>
<p><%=@event.description%></p>
<div class="row-fluid">
  <div class="span6">
    <h1><%=link_to @event.registrations.count, "#"%></h1> registrants
    <p><%=@event.registrations.count(:group => 'date(created_at)')%></p>
  </div>
  <div class="span6">
    <h1><%=@event.projects.count%></h1> projects
        <p><%=@event.projects.count(:group => 'date(created_at)')%></p>
  </div>
</div>
<div class="row-fluid">
  <div class="span6">
    <h1><%=@event.vote_count%></h1> votes
    <p><%=@event.ratings.count(:group => 'date(project_ratings.created_at)')%></p>
  </div>
  <div class="span6">
    <h1><%=@event.volunteer_count%></h1> volunteers
    <p><%=@event.volunteers.count(:group => 'date(project_volunteers.created_at)')%></p>
  </div>
</div>
<div class="row-fluid">
  <div class="span6">
    <h1><%=@event.comments.count%></h1> comments
    <p><%=@event.comments.count(:group => 'date(project_comments.created_at)')%></p>
  </div>
  <div class="span6">
  </div>
</div>
<hr />