<h2>Event <%=@event.title%></h2>
<p><%=link_to "Back to Admin", admin_root_path%></p>
<p><%=@event.description%></p>
<div class="row-fluid">
  <div class="span6">
    <%=link_to admin_event_event_registrations_path(@event) do%>
      <h1><%=@event.registrations.count%></h1> registrants
    <%end%>
    <p><%=@event.registrations.count(:group => 'created_at')%></p>
  </div>
  <div class="span6">
    <%=link_to admin_event_projects_path(@event, @project) do%>
      <h1><%=@event.projects.count%></h1> projects
    <%end%>
    <p><%=@event.projects.count(:group => 'created_at')%></p>
  </div>
</div>
<div class="row-fluid">
  <div class="span6">
    <h1><%=@event.vote_count%></h1> votes
    <p><%=@event.ratings.count(:group => 'project_ratings.created_at')%></p>
  </div>
  <div class="span6">
    <h1><%=@event.volunteer_count%></h1> volunteers
    <p><%=@event.volunteers.count(:group => 'project_volunteers.created_at')%></p>
  </div>
</div>
<div class="row-fluid">
  <div class="span6">
    <h1><%=@event.comments.count%></h1> comments
    <p><%=@event.comments.count(:group => 'project_comments.created_at')%></p>
  </div>
  <div class="span6">
  </div>
</div>
<hr />